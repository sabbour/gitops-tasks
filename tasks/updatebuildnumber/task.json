{
    "id": "a6924d7c-f489-45d1-9f21-b95618c2f1cd",
    "name": "updatebuildnumber",
    "friendlyName": "GitOps - Update Build Number",
    "description": "Updates build number using branch name, commit SHA and build ID",
    "helpMarkDown": "",
    "category": "Build",
    "author": "Ahmed Sabbour",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 2
    },
    "instanceNameFormat": "Update build number",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "buildReason",
            "type": "string",
            "label": "Build reason",
            "defaultValue": "$(Build.BuildReason)",
            "required": true
        },
        {
            "name": "sourceBranchName",
            "type": "string",
            "label": "Source branch name",
            "defaultValue": "$(Build.SourceBranchName)",
            "required": true
        },
        {
            "name": "gitCommitId",
            "type": "string",
            "label": "Commit ID/SHA",
            "defaultValue": "$(Build.SourceVersion)",
            "required": true
        },
        {
            "name": "buildId",
            "type": "string",
            "label": "Build ID",
            "defaultValue": "$(Build.BuildId)",
            "required": true
        },
        {
            "name": "prNumber",
            "type": "string",
            "label": "Pull Request ID",
            "defaultValue": "$(System.PullRequest.PullRequestId)",
            "required": false,
            "helpMarkDown": "Use `System.PullRequest.PullRequestNumber` in GitHub and `System.PullRequest.PullRequestId` in VSTS Git"
        }
    ],
    "execution": {
        "Node": {
            "target": "out/index.js"
        }
    }
}